# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration
DATABASE_URL=sqlite:./assignment_writer.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# API Keys - Required for AI Services
# Get your Gemini API key from: https://aistudio.google.com/app/apikey
# Used for Gemini 2.5 Flash, Gemini 2.5 Pro, and Gemini Flash Lite models
GEMINI_API_KEY=your-gemini-api-key-here

# Get your Originality.ai API key from: https://originality.ai/api
# Used for plagiarism and AI content detection
ORIGINALITY_AI_API_KEY=your-originality-ai-api-key-here

# Optional: Zotero API key for direct library integration
# Get from: https://www.zotero.org/settings/keys
ZOTERO_API_KEY=your-zotero-api-key-here

# Stripe Payment Configuration
# Get your Stripe keys from: https://dashboard.stripe.com/apikeys
# Required for payment processing and subscriptions
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# File Upload Configuration
MAX_FILE_SIZE=50mb
UPLOAD_DIR=./uploads

# Credit System Configuration
DEFAULT_FREE_CREDITS=200
DEFAULT_PRO_CREDITS=2000
CUSTOM_CREDIT_RATE=220

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
HELMET_CSP=false
HELMET_COEP=false